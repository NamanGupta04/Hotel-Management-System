def Guest_Left():
      print("showing the checkout date saved in the system")
      phone_no        =input("Enter the Contact No. of Guest:")
      print("CHECK_OUT_DATE,NO_OF_ROOM_GUEST_ID")
      cur.execute("select Check_Out_Date,No_of_room,Guest_Id from reservation where Contact_No='{}'".format(phone_no))
      for i in cur:
            print(i)
      print("Enter the check out details of guest")
      now               = datetime.now()
      current_time      = now.strftime("%H:%M:%S")
      print(current_time)
      Check_Out_Date    =input("Enter the check out date of guest   :")
      Check_Out_Time    =input("Enter the check out time of guest   :")
      Room_No           =int(input("Enter the room no from which guest left:"))
      working=1
      query             ="update ROOM set Room_Status={} where Room_No={}".format(working,Room_No)
      cur.execute(query)
      con.commit()
      guest_id          =input("Enter the guest id                  :")
      query1            =("Insert into Guest_departure values('{}','{}','{}')".format(guest_id,Check_Out_Date,Check_Out_Time))
      cur.execute(query1)
      con.commit()
      print("Showing the details of room to check whether it is updated or not")
      cur.execute("select*from ROOM")
      for i in cur:
            print(i)
