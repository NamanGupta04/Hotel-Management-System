#function defined for making a new booking
def New_Booking():
      now            = datetime.now()
      current_time   = now.strftime("%H:%M:%S")
      print("                                               ---GUPTA'S RESIDENCY---")
      print("                                                    ",date.today())
      print("                                                      ",current_time)
      print("Enter the details of the new booking")
      Booking_Id     =int(input("Enter the booking Id               :"))
      phone_no       =input("Enter the guest phone number       :")
      Check_In_Date1 =input("Enter the check in date(yyyy-mm-dd):")
      Check_In_Date  =parse(Check_In_Date1)
      Days_Stay      =int(input("Enter the no.of days guest stayed  :"))
      cur.execute("select Room_no,room_type_id,type from room r,room_type t where r.room_type_id=t.Id and room_status=1 ")
      print("ROOM_NO,ROOM_TYPE_ID,ROOM_TYPE")
      for i in cur:
            print(i)
      Room_Type_Id   =int(input("Enter the room type id in which guest will stay :"))
      No_of_room     =int(input("Enter the no.of room guest will stay              :"))
      cur.execute("select Guest_Id from guest where Contact_No={}".format(phone_no))
      for i in cur:
            print("Guest Id:",i)
      Guest_Id       =int(input("Enter the guest id     :"))
      Bill_Pay       =float(input("Enter the amount paid:"))
      Check_In_Date2 =datetime.date(Check_In_Date)
      Check_Out_Date =Check_In_Date+relativedelta(days=Days_Stay)
      Check_Out_Date1=Check_Out_Date
      cur.execute("insert into Reservation Values({},'{}',{},'{}','{}',{},{},{},{})".format(Booking_Id,phone_no,No_of_room,Check_In_Date1,Check_Out_Date1,Guest_Id,Days_Stay,Room_Type_Id,Bill_Pay))
      con.commit()
      cur.execute("update room set room_status=2 where Room_no={}".format(No_of_room))
      con.commit()
      print("Record addedd successfully;")
#function defined for changing the booking date
def Change_bookig_Date():
      Booking_Id          =int(input("Enter the booking id             :"))
      print("Now re-enter the booking date")
      Check_In_Date1      =input("Enter the changed booking date   :")
      Days_Stay           =int(input("Enter the no.of days guest stayed:"))
      Check_In_Date       =parse(Check_In_Date1)
      Check_In_Date2      =datetime.date(Check_In_Date)
      Check_Out_Date      =Check_In_Date+relativedelta(days=Days_Stay)
      Check_Out_Date1     =Check_Out_Date
      query               =("UPDATE reservation set Check_In_Date='{}',Check_Out_Date='{}',Days_Stay={} where B_Id={}".format(Check_In_Date1,Check_Out_Date1,Days_Stay,Booking_Id))
      cur.execute(query)
      con.commit()
      print("Record updated successfully")
