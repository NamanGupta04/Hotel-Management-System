def Bill():
      cur.execute("select First_Name,Last_Name,Check_In_Date,Check_Out_Date,Days_Stay from guest g,reservation r where g.Guest_Id=r.Guest_Id")
      for i in cur:
            print(i)
      check_in        =input("Enter the check in date")
      check_out       =input("Enter the check out date")
      no_of_days      =input("Enter the no.of days for which guest stay")
      first_name      =input("Enter the First Name")
      last_name       =input("Enter the last Name")
      phone_no        =input("Enter the contact number")
      cur.execute("select Room_Type_Id from reservation where Contact_No={}".format(phone_no))
      for i in cur:
            a         =print("room_type_id:-",i)
      Room_type_Id    =int(input("Enter the room type id shown above"))
      cur.execute("select cost from room_type where Id={}".format(Room_type_Id))
      for i in cur:
                  print("Rent of room per night:-",i)
      rent1           =input("Enter the rent of room in which guest stayed")
      cur.execute("select Amount from Restaurant where Contact_Number={}".format(phone_no))
      for i in cur :
            b         =print("Restaurant Bill Of the Guest:",i)
      b1              =int(input("Enter the Restaurant Bill of the Guest"))
      cur.execute("select Amount from Laundry where Contact_Number={}".format(phone_no))
      for i in cur :
            c         =print("Laundry Bill Of the Guest:",i)
      c1              =int(input("Enter the laundry Bill of the Guest"))
      gst             =int(rent1)/18
      service_charges =int(input("Enter the service charges"))
      cleaning_charges=int(input("Enter the cleaning charges"))
      rent            =int(rent1)*int(no_of_days)+service_charges+cleaning_charges+b1+c1
      now             = datetime.now()
      current_time    = now.strftime("%H:%M:%S")#string format
      cur.execute("update reservation set bill_pay={} where  Contact_No={}".format(rent,phone_no))
      con.commit()    
      bill= FPDF()
      bill.add_page()
      bill.set_font("Arial", size=12)
      bill.cell(0,5,"The Royal Atlantis Residences", ln=0, align="L")
      bill.cell(0,5,"Receipt No- "+str(random.randint(1000,10000000)), ln=1, align="R")
      bill.cell(0,5,"Crescent Rd", ln=0, align="l")
      bill.cell(0,5,"Date - "+str(check_out), ln=1, align="R")
      bill.cell(0,5,"Time - "+str(current_time), ln=1, align="R")
      bill.cell(0,5,"The Palm Jumeirah - Dubai ", ln=1, align="L")
      bill.cell(0,10,'INVOICE', 0, 1, align='C')
      bill.cell(0,0,"------------------------------------------------------------------------------------------------------------------------------------------",ln=1,align="L")
      bill.cell(160,10,"Guest Name",ln=0,align="L")
      bill.cell(160,10,first_name+" "+last_name,ln=1,align="L")
      bill.cell(0,0,"------------------------------------------------------------------------------------------------------------------------------------------",ln=1,align="L")
      bill.cell(160,10," Check In Date ",ln=0,align="L")
      bill.cell(160,10,str(check_in),ln=1,align="L")
      bill.cell(160,10," Check Out Date ",ln=0,align="L")
      bill.cell(160,10,str(check_out),ln=1,align="L")
      bill.cell(160,10," Total Days ",ln=0,align="L")
      bill.cell(160,10,str(no_of_days),ln=1,align="L")
      bill.cell(160,10," Restaurant Charges",ln=0,align="L")
      bill.cell(160,10,str(b1),ln=1,align="L")
      bill.cell(160,10," Laundry Charges",ln=0,align="L")
      bill.cell(160,10,str(c1),ln=1,align="L")
      bill.cell(160,10," Rent Per day* ",ln=0,align="L")
      bill.cell(160,10,str(rent1),ln=1,align="L")      
      bill.cell(160,10," Service Charges",ln=0,align="L")
      bill.cell(160,10,str(service_charges),ln=1,align="L")
      bill.cell(160,10," Cleaning Charges",ln=0,align="L")
      bill.cell(160,10,str(cleaning_charges),ln=1,align="L")
      bill.cell(0,0,"------------------------------------------------------------------------------------------------------------------------------------------",ln=1,align="L")
      bill.cell(160,10," Total Amount Payable ",ln=0,align="L")
      bill.cell(160,10,str(rent),"AED",ln=1,align="L")
      bill.cell(0,0,"------------------------------------------------------------------------------------------------------------------------------------------",ln=1,align="L")
      bill.cell(0,10,"*Inclusive of all other taxes!",ln=1,align="L")
      bill.cell(0,100,"Signature ",ln=1,align="R")
      while(True):
            a=input("Enter the name of the pdf of bill(.pdf)")
            bill.output(a)
            break
      print("PDF OF BILL IS SAVED")
