con=mysql.connector.connect(host="localhost",user="root",password="namangurvig",port=3306,database="HOTEL",auth_plugin='mysql_native_password')
cur=con.cursor()
def  add_roomtype():
      print("Adding details of new room")
      Id      =int(input("Enter the room type ID        :"))
      Type    =input("Enter the type of room        :")#which type of room u want to add like suite,deluxe,etc..
      C       =int(input("Enter the capacity of the room:"))#enter the no.of people which can accomodate in the room
      Cost    =int(input("Enter the rent of the room    :"))#rent for 24 hours
      query   =("insert into room_type values({},'{}',{},{})".format(Id,Type,C,Cost) )
      data    =cur.execute(query)
      con.commit()
      print("Record added successfully in table room_type")
#function defined for the change in the type in table room_type
def change_roomtype():
      Id      =int(input("Enter the room type ID            :"))
      print("Now re-enter the type of room ")
      Type    =input("Enter the modified type of room       :")
      query1  =("UPDATE  room_type SET Type='{}' WHERE Id={}".format(Type,Id))
      data    =cur.execute(query1)
      con.commit()
      print("Record updated succesfully")
