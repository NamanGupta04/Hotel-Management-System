def add_guest():
      print("Enter the details of the guest")
      GId            =int(input("Enter the Guest ID           :"))
      G_FirstName    =input("Enter guests First Name          :")
      G_LastName     =input("Enter guests Last Name           :")
      G_Address      =input("Enter the Address of the Guest   :")
      G_ContactNo    =input("Enter the contact number of Guest:")
      G_GovernmentId =input("Enter the addhar no.             :")
      print("Take other neccessary details from the guest like passport size photo and photocopy of their adhaar card and if he/she not an indian then take the photocopy of their passport and other details also")
      query=("insert into GUEST values({},'{}','{}','{}','{}','{}')".format(GId,G_FirstName,G_LastName,G_Address,G_ContactNo,G_GovernmentId)) 
      data           =cur.execute(query)
      con.commit()
      print("Record added successfully in table GUEST")
