#LAUNDRY SAMPLE
def laundry():
      print()
      print("]->-------------------LAUNDRY-------------------<-[")
      print()
      print("1.Trouser............ 30.00")
      print("2.Shirts............. 35.00")
      print("3.Jeans.............. 40.00")
      print("4.Kurta.............. 45.00")
      print("5.Pajama/Pajami...... 20.00")
      print("6.Skirts............. 25.00")
      print("7.Coats.............. 70.00")
      print("8.Saree.............. 80.00")
      print("9.Under Garments..... 20.00")
      print("10.Socks,gloves,caps. 20.00")
      print("11.Exit")
      amount=0#empty variable to store amount
      while(True):
            print()
            ch=int(input("Enter ur choice:--->"))
            if ch<1 or ch>=11:
                  break
            if ch==1:
                  c=int(input("Enter the quantity:--->"))
                  amount+=30*c
            if ch==2:
                  c=int(input("Enter the quantity:--->"))
                  amount+=35*c
            if ch==3:
                  c=int(input("Enter the quantity:--->"))
                  amount+=40*c
            if ch==4:
                  c=int(input("Enter the quantity:--->"))
                  amount+=45*c
            if ch==5:
                  c=int(input("Enter the quantity:--->"))
                  amount+=20*c
            if ch==6:
                  c=int(input("Enter the quantity:--->"))
                  amount+=25*c
            if ch==7:
                  c=int(input("Enter the quantity:--->"))
                  amount+=70*c
            if ch==8:
                  c=int(input("Enter the quantity:--->"))
                  amount+=80*c
            if ch==9:
                  c=int(input("Enter the quantity:--->"))
                  amount+=20*c
            if ch==10:
                  c=int(input("Enter the quantity:--->"))
                  amount+=20*c   
      print ("Total Laundary Cost =",amount,"AED \n")
      phone_number=input("Enter the Contact No.")
      query1=("Insert into Laundry values('{}',{})".format(phone_number,amount))
      cur.execute(query1)
      con.commit()
